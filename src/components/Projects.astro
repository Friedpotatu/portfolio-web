---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import GitHub from './icons/GitHub.astro';
import Star from './icons/Star.astro';
import { getTechColor } from '../utils/techColors';

// Obtener todos los proyectos y ordenarlos
const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => a.data.order - b.data.order);
---

<div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
            Proyectos
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            Una selección de proyectos en los que he trabajado, desde sistemas empresariales hasta aplicaciones web modernas.
        </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedProjects.map((project) => (
            <article class="group relative">
                {/* Imagen del proyecto */}
                <div class="block relative overflow-hidden rounded-xl mb-4 aspect-video bg-gray-100 dark:bg-gray-800">
                    {project.data.image.endsWith('.mkv') || project.data.image.endsWith('.mp4') || project.data.image.endsWith('.webm') ? (
                        <video
                            src={project.data.image}
                            width="600"
                            height="338"
                            muted
                            loop
                            playsinline
                            preload="metadata"
                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                        />
                    ) : (
                        <Image
                            src={project.data.image}
                            alt={project.data.title}
                            loading="lazy"
                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                            width={600}
                            height={338}
                        />
                    )}

                    {/* Overlay oscuro en hover */}
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

                    {/* Badge destacado */}
                    {project.data.featured && (
                        <div class="absolute top-3 right-3">
                            <div class="p-1.5 bg-white/95 dark:bg-gray-900/95 backdrop-blur-sm rounded-full shadow-lg">
                                <Star class="w-4 h-4 text-blue-600 dark:text-blue-400" />
                            </div>
                        </div>
                    )}

                    {/* Indicador de galería */}
                    {project.data.galleryImages && project.data.galleryImages.length > 0 && (() => {
                        const total = project.data.galleryImages.length;
                        return (
                            <div class="absolute bottom-3 right-3 px-2 py-1 bg-black/70 backdrop-blur-sm rounded-md text-white text-xs font-medium flex items-center gap-1 group-hover:opacity-0 transition-opacity duration-300">
                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                {total}
                            </div>
                        );
                    })()}

                    {/* Botones de acción en hover */}
                    <div class="absolute inset-0 flex items-center justify-center gap-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <a
                            href={`/projects/${project.id}`}
                            class="px-4 py-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-white rounded-lg font-medium text-sm hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors shadow-lg"
                        >
                            Ver proyecto
                        </a>

                        {project.data.github ? (
                            <a
                                href={project.data.github}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="p-2 bg-white dark:bg-gray-900 text-gray-900 dark:text-white rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors shadow-lg"
                                title="Ver código en GitHub"
                            >
                                <GitHub class="w-5 h-5" />
                            </a>
                        ) : (
                            <div class="p-2 bg-white/50 dark:bg-gray-900/50 text-gray-400 dark:text-gray-600 rounded-lg backdrop-blur-sm" title="Código privado">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                            </div>
                        )}
                    </div>
                </div>

                {/* Contenido */}
                <div class="space-y-3">
                    {/* Título y descripción */}
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                            <a href={`/projects/${project.id}`}>{project.data.title}</a>
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed line-clamp-2">
                            {project.data.description}
                        </p>
                    </div>

                    {/* Tecnologías */}
                    <div class="flex flex-wrap gap-1.5">
                        {project.data.technologies.slice(0, 4).map((tech) => (
                            <span class={`px-2.5 py-1 rounded-md text-xs font-medium ${getTechColor(tech)}`}>
                                {tech}
                            </span>
                        ))}
                        {project.data.technologies.length > 4 && (
                            <span class="px-2.5 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded-md text-xs font-medium">
                                +{project.data.technologies.length - 4}
                            </span>
                        )}
                    </div>

                    {/* Enlace demo si existe */}
                    {project.data.demo && (
                        <div class="pt-1">
                            <a
                                href={project.data.demo}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-1 text-sm text-blue-600 dark:text-blue-400 hover:underline font-medium"
                            >
                                Ver demo en vivo
                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                </svg>
                            </a>
                        </div>
                    )}
                </div>
            </article>
        ))}
    </div>
</div>