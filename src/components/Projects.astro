---
import { Image } from 'astro:assets';
import project1 from '../assets/Project1.png';
import project2 from '../assets/Project2.png';
import project3 from '../assets/Project3.jpg';
import GitHub from './icons/GitHub.astro';
---
<div class="max-w-6xl mx-auto">

    <h2 class="text-4xl md:text-5xl font-bold text-center text-gray-900 dark:text-white mb-16">
    Proyectos
    </h2>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">

        <!-- Proyecto 1 -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-neutral-200 dark:border-neutral-700">
            <div class="h-48 relative overflow-hidden">
                <Image 
                src={project1}
                alt="Proyecto 1"
                loading={"lazy"}/>
                <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors duration-300">
                </div>
                <div class="absolute bottom-4 left-4 text-white">
                    <h3 class="text-xl font-semibold">Sistema Inventario</h3>
                </div>
            </div>
            <div class="p-6">
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                    Sistema de gestión de inventario y activos TI.
                </p>
            <div class="flex flex-wrap gap-2 mb-4">
                <span class="px-2 py-1 bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 rounded text-xs">Laravel 12</span>
                <span class="px-2 py-1 bg-cyan-100 dark:bg-cyan-900 text-cyan-800 dark:text-cyan-200 rounded text-xs">Bootstrap 5</span>
                <span class="px-2 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 rounded text-xs">MariaDB</span>
            </div>
            <div class="flex gap-3">
                <button class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:border-blue-600 hover:text-blue-600 rounded-lg text-sm font-medium transition-colors">
                    Ver Gallería
                </button>
                <button class="flex items-center gap-x-2 px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:border-blue-600 hover:text-blue-600 rounded-lg text-sm font-medium transition-colors">
                    <GitHub class="w-4 h-4" />
                    GitHub
                </button>                
            </div>
        </div>
    </div>

    <!-- Proyecto 2 -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700">
        <div class="h-48 relative overflow-hidden">
            <Image 
                src={project2}
                alt="Proyecto 2"
                loading={"lazy"}/>
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors duration-300">
            </div>
                <div class="absolute bottom-4 left-4 text-white">
                    <h3 class="text-xl font-semibold">Sistema Antu</h3>
                </div>
        </div>
        <div class="p-6">
            <p class="text-gray-600 dark:text-gray-300 mb-4">
                Sistema de visualización del analisis de datos y modelo predictivo para la Gerencia de Seguridad y Salud Ocupacional.
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
                <span class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded text-xs">Django</span>
                <span class="px-2 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 rounded text-xs">Random Forest</span>
                <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded text-xs">SQLite</span>
            </div>
            <div class="flex gap-3">
                <button class="flex items-center gap-x-2 px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:border-blue-600 hover:text-blue-600 rounded-lg text-sm font-medium transition-colors">
                    <GitHub class="w-4 h-4" />
                    GitHub
                </button>                
            </div>
        </div>
    </div>

    <!-- Proyecto 3 -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700">
        <div class="h-48 relative overflow-hidden">
            <Image 
                src={project3}
                alt="Proyecto 3"
                loading={"lazy"}/>
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors duration-300">
            </div>
                <div class="absolute bottom-4 left-4 text-white">
                    <h3 class="text-xl font-semibold">Sistema Activos Fijos</h3>
                </div>
            </div>
            <div class="p-6">
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                    Sistema de gestión de activos fijos y código QR.
                </p>
                <div class="flex flex-wrap gap-2 mb-4">
                    <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded text-xs">D3.js</span>
                    <span class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded text-xs">Python</span>
                    <span class="px-2 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded text-xs">FastAPI</span>
                </div>
                <div class="flex gap-3">
                    <button class="flex items-center gap-x-2 px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:border-blue-600 hover:text-blue-600 rounded-lg text-sm font-medium transition-colors">
                        <GitHub class="w-4 h-4" />
                        GitHub
                    </button>  
                </div>
            </div>
        </div>
    </div>
</div>