---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import GitHub from './icons/GitHub.astro';
import { getTechColor } from '../utils/techColors';

// Obtener todos los proyectos y ordenarlos
const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => a.data.order - b.data.order);
---

<div class="max-w-6xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-center text-gray-900 dark:text-white mb-16">
        Proyectos
    </h2>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedProjects.map((project) => (
            <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-neutral-200 dark:border-neutral-700 cursor-pointer transition-transform transform hover:scale-105" onclick={`window.location.href='${project.data.gallery ? `/projects/${project.id}` : (project.data.demo || project.data.github || '#')}'`}>
                <div class="h-48 relative overflow-hidden rounded-t-2xl">
                    {project.data.image.endsWith('.mkv') || project.data.image.endsWith('.mp4') || project.data.image.endsWith('.webm') ? (
                        <video
                            src={project.data.image}
                            autoplay
                            muted
                            loop
                            playsinline
                            class="w-full h-full object-cover"
                        />
                    ) : (
                        <Image 
                            src={project.data.image}
                            alt={project.data.title}
                            loading="lazy"
                            class="w-full h-full object-cover"
                            width={600}
                            height={300}
                        />
                    )}
                    <div class="absolute inset-0 bg-black/20 hover:bg-black/10 transition-colors duration-300"></div>
                    <div class="absolute bottom-4 left-4 text-white">
                        <h3 class="text-xl font-semibold">{project.data.title}</h3>
                    </div>
                    {project.data.featured && (
                        <div class="absolute top-4 right-4">
                            <span class="px-2 py-1 bg-yellow-500 text-white text-xs font-semibold rounded-full">
                                Destacado
                            </span>
                        </div>
                    )}
                </div>
                
                <div class="p-6">
                    <p class="text-gray-600 dark:text-gray-300 mb-4 text-sm leading-relaxed">
                        {project.data.description}
                    </p>
                    
                    <div class="flex flex-wrap gap-2 mb-4">
                        {project.data.technologies.slice(0, 3).map((tech) => (
                            <span class={`px-2 py-1 rounded text-xs font-medium ${getTechColor(tech)}`}>
                                {tech}
                            </span>
                        ))}
                        {project.data.technologies.length > 3 && (
                            <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded text-xs">
                                +{project.data.technologies.length - 3} m√°s
                            </span>
                        )}
                    </div>
                    
                    <div class="flex gap-3">
                        {project.data.gallery && (
                            <a
                                href={`/projects/${project.id}`}
                                onclick="event.stopPropagation()"
                                class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:border-blue-600 hover:text-blue-600 dark:hover:border-blue-400 dark:hover:text-blue-400 rounded-lg text-sm font-medium transition-colors"
                            >
                                Ver Proyecto
                            </a>
                        )}

                        {project.data.demo && (
                            <a
                                href={project.data.demo}
                                target="_blank"
                                rel="noopener noreferrer"
                                onclick="event.stopPropagation()"
                                class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-medium transition-colors"
                            >
                                Ver Demo
                            </a>
                        )}
                        
                        {project.data.github ? (
                            <a
                                href={project.data.github}
                                target="_blank"
                                rel="noopener noreferrer"
                                onclick="event.stopPropagation()"
                                class="flex items-center gap-x-2 px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:border-blue-600 hover:text-blue-600 dark:hover:border-blue-400 dark:hover:text-blue-400 rounded-lg text-sm font-medium transition-colors"
                            >
                                <GitHub class="w-4 h-4" />
                                GitHub
                            </a>
                        ) : (
                            <button
                                disabled
                                onclick="event.stopPropagation()"
                                class="flex items-center gap-x-2 px-4 py-2 border border-gray-200 dark:border-gray-700 text-gray-400 dark:text-gray-500 bg-gray-50 dark:bg-gray-800 rounded-lg text-sm font-medium cursor-not-allowed opacity-60"
                            >
                                <GitHub class="w-4 h-4" />
                                Privado
                            </button>
                        )}
                    </div>
                </div>
            </div>
        ))}
    </div>
</div>