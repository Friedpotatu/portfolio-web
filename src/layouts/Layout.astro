---
import '../styles/global.css';
import { ClientRouter } from "astro:transitions";

interface Props {
	title: string
}

const {title} = Astro.props
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
		<!-- Script para prevenir flash de contenido sin estilo -->
		<script is:inline>
			// Solo aplicar tema inicial si existe en localStorage
			const theme = localStorage.getItem('theme');
			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			}
		</script>
	</head>
	<body class="bg-white dark:bg-neutral-900 text-gray-900 dark:text-white min-h-screen pb-32 transition-colors duration-300">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
